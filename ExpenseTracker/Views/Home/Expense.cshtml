@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Link to Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
        }

        /* Sidebar styles */
        .sidebar {
            width: 250px;
            background-color: #467160;
            height: 100vh;
            color: white;
            position: fixed;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 20px;
        }

            .sidebar img {
                border-radius: 50%;
                width: 80px;
                margin-bottom: 10px;
            }

            .sidebar h3 {
                margin-top: 0;
                font-size: 18px;
            }

        .menu-item {
            margin-bottom: 15px;
            color: white;
            display: flex;
            align-items: center;
        }

            .menu-item i {
                margin-right: 10px;
            }

            .menu-item a {
                color: white;
                text-decoration: none;
            }

            .menu-item:hover {
                text-decoration: underline;
            }

        /* Content section */
        .content {
            margin-left: 250px;
            padding: 20px;
            background-color: #f7f7f7;
            min-height: 100vh;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: white;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

            .header .logo {
                font-size: 24px;
                font-weight: bold;
                color: #467160;
            }

        .expense-content {
            margin-top: 20px;
        }

        .table-container {
            background-color: white;
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

            .table-container h4 {
                margin-bottom: 20px;
            }

            .table-container table th,
            .table-container table td {
                padding: 10px;
                border-bottom: 1px solid #ddd;
            }

            .table-container table tbody tr:nth-child(even) {
                background-color: #e9f5f0;
            }

        .action-buttons i {
            margin-right: 5px;
            color: #467160;
            cursor: pointer;
        }

            .action-buttons i:hover {
                color: #ff0000;
            }

        .add-expense-btn {
            background-color: #467160;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .add-expense-btn:hover {
                background-color: #3b5d53;
            }
    </style>
</head>
<body>

    <div class="sidebar">
        <div>
            <img src="path_to_profile_image.jpg" alt="Profile Picture">
            <h3>Diovic Solon</h3>
            <p>Expense Tracker</p>
        </div>
        <div class="menu">
            <div class="menu-item"><i class="bi bi-house-door"></i><a href="/Home/Dashboard">Dashboard</a></div>
            <div class="menu-item"><i class="bi bi-wallet2"></i><a href="#">Expenses</a></div>
            <div class="menu-item"><i class="bi bi-folder"></i><a href="#">Category</a></div>
            <div class="menu-item"><i class="bi bi-graph-up"></i><a href="#">Reporting & Analytics</a></div>
            <div class="menu-item"><i class="bi bi-gear"></i><a href="#">Settings & Preferences</a></div>
        </div>
        <div class="menu-item"><i class="bi bi-box-arrow-left"></i><a href="/Home/Logout">Log Out</a></div>
    </div>

    <div class="content">
        <div class="header">
            <div class="logo">.budgET</div>
            <a href="/Home/AddExpense" class="add-expense-btn">
                <i class="bi bi-plus-circle"></i> Add Expense
            </a>


        </div>

        <div class="expense-content">
            <div class="table-container">
                <h4>Expenses</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
