@{
    Layout = null;
    var categories = ViewBag.Categories; // Retrieve categories from ViewBag passed by HomeController
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .sidebar {
            width: 250px;
            background-color: #467160;
            color: white;
            height: 100vh;
            position: fixed;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar img {
                border-radius: 50%;
                width: 80px;
                margin-bottom: 10px;
            }

            .sidebar h3 {
                font-size: 18px;
                color: white;
                margin-bottom: 5px;
            }

            .sidebar p {
                font-size: 14px;
                margin-bottom: 20px;
            }

        .menu-item {
            margin-bottom: 15px;
        }

            .menu-item a {
                color: white;
                text-decoration: none;
                font-size: 16px;
                display: flex;
                align-items: center;
            }

                .menu-item a i {
                    margin-right: 10px;
                    font-size: 20px;
                }

            .menu-item.active {
                background-color: rgba(255, 255, 255, 0.2);
                padding: 5px 10px;
                border-radius: 5px;
            }

        .content {
            margin-left: 270px;
            padding: 40px;
        }

            .content h1 {
                color: #467160;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .btn-new-category {
            background-color: #467160;
            color: white;
            border: none;
            padding: 5px 15px;
            font-size: 14px;
            border-radius: 5px;
        }

        .table {
            background-color: #ffffff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .table th {
                background-color: #f0f0f0;
                font-weight: bold;
                text-transform: uppercase;
                font-size: 12px;
                padding: 15px;
            }

            .table td {
                padding: 15px;
                font-size: 14px;
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #ffffff;
        }

        .table-striped tbody tr:nth-of-type(even) {
            background-color: #e6f3f0;
        }

        .action-buttons button {
            background: none;
            border: none;
            font-size: 16px;
            color: #467160;
            margin-right: 10px;
        }

        .header-logo {
            text-align: right;
            font-size: 24px;
            font-weight: bold;
            color: #467160;
            margin-bottom: 20px;
        }

            .header-logo::before {
                content: ".budgET";
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <div>
            <img src="path_to_profile_image.jpg" alt="Profile Picture">
            <h3>Diovic Solon</h3>
            <p>Expense Tracker</p>
        </div>
        <div class="menu">
            <div class="menu-item"><a href="/Home/Dashboard"><i class="bi bi-house-door"></i>Dashboard</a></div>
            <div class="menu-item"><a href="/Home/Expense"><i class="bi bi-wallet2"></i>Expenses</a></div>
            <div class="menu-item active"><a href="/Home/Category"><i class="bi bi-folder"></i>Category</a></div>
            <div class="menu-item"><a href="#"><i class="bi bi-graph-up"></i>Reporting & Analytics</a></div>
            <div class="menu-item"><a href="#"><i class="bi bi-gear"></i>Settings & Preferences</a></div>
        </div>
        <div class="menu-item"><a href="/Home/Logout"><i class="bi bi-box-arrow-left"></i>Log Out</a></div>
    </div>

    <div class="content">
        <div class="header-logo"></div>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Category</h1>
            <button class="btn btn-new-category" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                + New Category
            </button>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>TITLE</th>
                    <th>DATE CREATED</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in ViewBag.Categories)
                {
                    <tr>
                        <td><i class="bi bi-folder"></i> @category.CategoryName</td>
                        <td>@category.DateCreated.ToString("MMMM dd, yyyy")</td>
                        <td class="action-buttons">
                            <button><i class="bi bi-pencil"></i></button>
                            <button><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal for Adding New Category -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCategoryModalLabel">New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-action="AddCategory">
                        <div class="mb-3">
                            <label for="newCategoryTitle" class="form-label">Category Title</label>
                            <input type="text" class="form-control" id="newCategoryTitle" name="newCategory" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Done</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>