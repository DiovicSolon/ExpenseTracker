@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
        }

        .register-container {
            display: flex;
            width: 100%;
            height: 100vh;
            max-width: 100%;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            border-radius: 0;
            overflow: hidden;
        }

            .register-container .left-side {
                background-color: #fef7ed;
                flex: 1;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 50px;
            }

            .register-container .right-side {
                background-color: #467160;
                color: white;
                flex: 1;
                display: flex;
                justify-content: center;
                align-items: center;
            }

        .right-side .logo {
            font-size: 50px;
            text-align: center;
        }

            .right-side .logo .dot {
                font-size: 70px;
                font-weight: bold;
            }

            .right-side .logo .text-light {
                font-weight: 300;
            }

        .form-container {
            width: 80%;
        }

            .form-container h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #467160;
            }

            .form-container input {
                width: 100%;
                padding: 15px;
                margin-bottom: 15px;
                border-radius: 5px;
                border: 1px solid #ccc;
                font-size: 18px;
            }

            .form-container button {
                width: 100%;
                padding: 15px;
                border: none;
                border-radius: 5px;
                background-color: #467160;
                color: white;
                font-size: 18px;
            }

            .form-container .link {
                text-align: center;
                margin-top: 15px;
                display: block;
                color: #467160;
            }

                .form-container .link a {
                    color: #467160;
                    text-decoration: none;
                    font-weight: bold;
                }

                    .form-container .link a:hover {
                        text-decoration: underline;
                    }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="left-side">
            <div class="form-container">
                <h2>Register</h2>
                <form action="/Home/Register" method="post">
                    <div class="row">
                        <div class="col">
                            <input type="text" name="firstName" placeholder="First Name" required />
                        </div>
                        <div class="col">
                            <input type="text" name="lastName" placeholder="Last Name" required />
                        </div>
                    </div>
                    <input type="email" name="email" placeholder="Email Address" required />
                    <input type="text" name="username" placeholder="Username" required />
                    <input type="password" name="password" placeholder="Password" required />
                    <input type="password" name="confirmPassword" placeholder="Confirm Password" required />
                    <button type="submit">Register</button>
                    <div class="link">
                        Already have an account? <a href="/Home/Login">Log in</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="right-side">
            <div class="logo">
                <span class="dot">.</span><span>budg</span><span class="text-light">ET</span>
                <p>expense tracker</p>
            </div>
        </div>
    </div>
</body>
</html>
